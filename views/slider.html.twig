<div class="start sliderBox">
	<div id="carousel" class="carousel slide" data-ride="carousel" data-interval="{{ slider_speed | default(5000)}}">
		<ol class="carousel-indicators">
		{% for slide in slider %}
			{% if loop.first %}
			<li data-target="#carousel" data-slide-to="{{ loop.index }}" class="active"></li>
			{% else %}
			<li data-target="#carousel" data-slide-to="{{ loop.index }}"></li>
			{% endif %}
			
		{% endfor %}
		</ol>
		<div class="carousel-inner" role="listbox">

			{% for slide in slider %} {% if loop.first %}
			<div class="carousel-item active">
				{% else %}
				<div class="carousel-item">
					{% endif %}
					<img src="{{ slide.image_cropped[0] }}">
					<div class="carousel-caption">
						<h1>{{ slide.title }}</h1>
						<p>{{ slide.subtitle }}</p>
						<!-- <a class="btn btn-default" href="#startTextBox" role="button">Mehr Infos</a> -->
					</div>
				</div>

				{% endfor %}
			</div>
		</div>
		<a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
		{#<div class="dots"></div>#}
	</div>
